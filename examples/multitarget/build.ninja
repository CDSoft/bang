######################################################################
# Release
######################################################################

rule cp
  description = cp $out
  command = cp -d --preserve=mode $in $out

build $builddir/dist/linux/bin/hi: cp $builddir/ex1/linux/bin/hi
build $builddir/dist/linux/bin/hi-repl: cp $builddir/ex1/linux/bin/hi-repl
build $builddir/dist/macos/bin/hi: cp $builddir/ex1/macos/bin/hi
build $builddir/dist/macos/bin/hi-repl: cp $builddir/ex1/macos/bin/hi-repl
build $builddir/dist/windows/bin/hi.exe: cp $builddir/ex1/windows/bin/hi.exe
build $builddir/dist/windows/bin/hi-repl.exe: cp $builddir/ex1/windows/bin/hi-repl.exe

rule tar
  description = tar $out
  command = tar -caf $out -C $base $name $transform --sort=name

build $builddir/release/linux.tar.gz: tar | $builddir/dist/linux/bin/hi $builddir/dist/linux/bin/hi-repl
  base = $builddir/dist
  name = linux
build $builddir/release/macos.tar.gz: tar | $builddir/dist/macos/bin/hi $builddir/dist/macos/bin/hi-repl
  base = $builddir/dist
  name = macos
build $builddir/release/windows.tar.gz: tar | $builddir/dist/windows/bin/hi-repl.exe $builddir/dist/windows/bin/hi.exe
  base = $builddir/dist
  name = windows
build $builddir/release/all.tar.gz: tar | $builddir/dist/linux/bin/hi $builddir/dist/linux/bin/hi-repl $builddir/dist/macos/bin/hi $builddir/dist/macos/bin/hi-repl $builddir/dist/windows/bin/hi-repl.exe $builddir/dist/windows/bin/hi.exe
  base = $builddir/dist
  name = linux macos windows

######################################################################
# Project structure
######################################################################

rule graph.dot
  description = graph.dot $out
  command = ninja -f $in -t graph > $out

rule dot.svg
  description = dot.svg $out
  command = dot -Tsvg -o $out $in

rule svgtidy.svg
  description = svgtidy.svg $out
  command = doc/svgtidy.lua < $in > $out

build $builddir/tmp/doc/graph.svg.tmp/graph-1.dot: graph.dot build.ninja
build $builddir/tmp/doc/graph.svg.tmp/graph-2.svg: dot.svg $builddir/tmp/doc/graph.svg.tmp/graph-1.dot
build doc/graph.svg: svgtidy.svg $builddir/tmp/doc/graph.svg.tmp/graph-2.svg

######################################################################
# Regenerate build.ninja when build.lua changes
######################################################################

rule bang
  command = ../../.build/bang -g "../../.build/bang" $in -o $out
  generator = true

build build.ninja: bang build.lua | ./arch/linux/config.lua ./arch/macos/config.lua ./arch/windows/config.lua
  pool = console
